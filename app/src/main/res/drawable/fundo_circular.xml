<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="@color/md_blue_grey_200" />
            <!--shadow Color-->
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="0dp"
        android:right="3dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/md_blue_grey_400" />
        </shape>
    </item>

    <item
        android:bottom="6dp"
        android:left="0dp"
        android:right="6dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <solid android:color="@color/md_green_700" />
        </shape>
    </item>
</layer-list>